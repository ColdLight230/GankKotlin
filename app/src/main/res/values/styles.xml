<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CoverTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:paddingLeft">@dimen/common_horizontal_margin</item>
        <!--<item name="android:background">@drawable/background_article_cover</item>-->
        <item name="android:paddingRight">@dimen/common_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/common_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/common_vertical_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardMargin">
        <item name="android:layout_marginTop">@dimen/small_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_vertical_margin</item>
    </style>

</resources>
