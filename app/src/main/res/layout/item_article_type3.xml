<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/common_horizontal_margin">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/f3"
            tools:text="aaaaaaaaaaaaaaaaaaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_vertical_margin">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/f6"
                tools:text="aaaaaaaaaaa" />

            <ImageView
                android:id="@+id/iv_certification"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/tv_username"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_certification"
                android:layout_toRightOf="@+id/iv_certification"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/f6"
                tools:text="2017-01-19 15:00" />

            <TextView
                android:id="@+id/tv_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/tv_username"
                android:drawableLeft="@mipmap/ic_message"
                android:drawablePadding="3dp"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/f6"
                android:visibility="gone"
                tools:text="aaa" />
        </RelativeLayout>


    </LinearLayout>

</layout>